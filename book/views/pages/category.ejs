<div class="card">
    <div class="card-header">
        <strong>Basic Form</strong> Elements
    </div>
    <div class="card-body card-block">
        <form action="/page/category" method="post" class="form-horizontal">
            <div class="row form-group">
                <div class="col col-md-3"><label class=" form-control-label">Static</label></div>
                <div class="col-12 col-md-9">
                    <p class="form-control-static">BookShop</p>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                	<label for="text-input" class=" form-control-label">Title</label>
                </div>
                <div class="col-12 col-md-9">
                	<input type="text" id="txtTitle" name="txtTitle" placeholder="Title" class="form-control" required>
                	<small class="form-text text-muted">This is a Title</small>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                	<label for="text-input" class=" form-control-label">Ordering</label>
                </div>
                <div class="col-12 col-md-9">
                	<input type="text" id="txtOrdering" name="txtOrdering" placeholder="Ordering" class="form-control" required>
                	<small class="help-block form-text">Please enter ordering</small>
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                	<label for="select" class=" form-control-label">Select</label>
                </div>
                <div class="col-12 col-md-9">
                    <select name="select" id="select" class="form-control">
                        <option value="1">Show</option>
                        <option value="0">Hide</option>
                    </select>
                </div>
            </div>
            <div class="card-footer">
        		<button type="submit" class="btn btn-primary btn-sm">
            		<i class="fa fa-dot-circle-o"></i> Submit
        		</button>
		        <button type="reset" class="btn btn-danger btn-sm">
		            <i class="fa fa-ban"></i> Reset
		        </button>
    		</div>
        </form>
    </div>

	<% if (typeof message !== 'undefined') { %>
		<h3><%- message %></h3>
	<% } %>

</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Table Head</strong>
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Order</th>
                        <th scope="col">Title</th>
                        <th scope="col">Active</th>
                        <th scope="col">Books</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                	<% cate.forEach(function(cate){ %>

                    <tr>
                        <th scope="row"><%- cate._id %></th>
                        <td><%- cate.title %></td>
                        <td>
                        	<% if (cate.active == 1) { %>
                        		<p>Show</p>
                        	<% } else { %>
                        		<p>Hide</p>
                        	<% } %>
                        </td>
                        <td></td>
                        <td width="170px">
                        	<button type="button" class="btn btn-secondary">Edit</button>
                        	<button type="button" class="btn btn-danger">
                        		<a href="/category/delete/<%- cate._id %>" title="">Delete</a>
                        	</button>
                        </td>
                    </tr>

                    <% }) %>

                </tbody>
            </table>

        </div>
    </div>
</div>